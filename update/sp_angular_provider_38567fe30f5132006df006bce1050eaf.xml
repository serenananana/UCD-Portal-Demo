<record_update table="sp_angular_provider">
    <sp_angular_provider action="INSERT_OR_UPDATE">
        <name>ucdSpCategoryBlock</name>
        <script><![CDATA[/**
 * Category blocks to be used in the SC Category Blocks widget.
 */
function ucdSpCategoryBlock(){
	return {
		restrict: 'E',
		scope: {
			category: '='
		},
		replace: true,
		template:
		'<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">' +
			'<div class="panel panel-default">' +
				'<a id="category-link" ' +
						'href="?id=ucd_category&sys_id={{category.sys_id}}">' +
					'<div id="child-heading" class="panel-heading title">' +
						'<div ng-if="category.picture" ' +
									'class="cat-icon pull-left" ' +
									'style="background-image: url({{category.picture}})">' +
						'</div>' +
						'<span>{{::category.title}}</span>' +
					'</div>' +
					'<div id="child-body" class="panel-body text-muted">' +
						'<p>{{::category.description}}' +
					'</div>' +
					'<div class="panel-footer">' +
						'<p>See more</p>' +
					'</div>' +
				'</a>' +
			'</div>' +
		'</div>'
	};
}
]]></script>
